---
const currentLang = Astro.currentLocale;
import { getRelativeLocaleUrl } from "astro:i18n";
const { slug, title, excerpt } = Astro.props;
---

<article class="post-card">
  <h2>
    <a href={getRelativeLocaleUrl(currentLang, `/blog/${slug}`)}>{title}</a>
  </h2>
  <p>
    {excerpt}
  </p>
</article>

<style>
  .post-card {
    border: 1px solid #000000;
    padding: 1rem;
    margin: 1rem 0;

    h2 a {
      text-decoration: none;
      color: #052575;
    }

    p {
      margin: 0.5rem 0;
    }

    time {
      font-size: 0.875rem;
      color: #555;
    }
  }
</style>
